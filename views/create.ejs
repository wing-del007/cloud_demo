<h2>Add Book</h2>
<a href="/logout">Logout</a>

<form method="POST" action="/create">
  <!-- bookId 自動產生，不用輸入 -->
  <p>Book ID will be generated automatically (A00001, A00002, ...)</p>

  <label>Title:</label>
  <input name="title" placeholder="Title" required><br>

  <label>Author:</label>
  <input name="author" placeholder="Author"><br>

  <label>Genre:</label>
  <input name="genre" placeholder="Genre"><br>

  <label>Year:</label>
  <input name="year" placeholder="Year" type="number"><br>

  <label>Content:</label><br>
  <textarea name="content" rows="4" cols="40" placeholder="Book content / description"></textarea><br>

  <label>Available:</label>
  <input type="checkbox" name="available" checked><br>

  <button type="submit">Save</button>
</form>

